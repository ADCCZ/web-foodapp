{# app/Views/templates/products.twig #}
{% extends "base.twig" %}

{% block title %}Nabídka produktů - Délicious{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12 py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="fw-bold" style="color: #0f172a;">
                <i class="bi bi-basket-fill" style="color: #f97316;"></i> Naše nabídka
            </h2>
            {% if session.role is defined and session.role == 'dodavatel' %}
                <a href="?page=supplier" class="btn btn-modern btn-modern-primary">
                    <i class="bi bi-shop-window"></i> Správa produktů
                </a>
            {% endif %}
        </div>
    </div>
</div>

<div class="row g-3">
    {% if products|length > 0 %}
        {% for product in products %}
        <div class="col-sm-6 col-md-6 col-lg-4 mb-3">
            <div class="card-modern h-100">
                {# Product Image #}
                <div class="position-relative" style="height: 150px; overflow: hidden; background: #f1f5f9; border-radius: 12px 12px 0 0;">
                    {% if product.image %}
                        <img src="uploads/{{ product.image }}" alt="{{ product.name }}" class="w-100 h-100" style="object-fit: cover;">
                    {% else %}
                        <div class="w-100 h-100 d-flex align-items-center justify-content-center">
                            <i class="bi bi-image" style="font-size: 4rem; color: #cbd5e1;"></i>
                        </div>
                    {% endif %}
                    {# Price badge #}
                    <div class="position-absolute top-0 end-0 m-3">
                        <span class="badge" style="background: #f97316; font-size: 1rem; padding: 0.5rem 1rem;">
                            {{ product.price }} Kč
                        </span>
                    </div>
                </div>

                <div class="card-body d-flex flex-column p-3">
                    {# Product Name #}
                    <h6 class="fw-bold mb-2" style="color: #0f172a; font-size: 1rem;">{{ product.name }}</h6>

                    {# Supplier Name #}
                    <p class="text-muted mb-2" style="font-size: 0.85rem;">
                        <i class="bi bi-shop" style="color: #f97316;"></i> {{ product.supplier_name }}
                    </p>

                    {# Description #}
                    <p class="mb-3" style="color: #64748b; font-size: 0.9rem;">
                        {{ product.description|length > 80 ? product.description|slice(0, 80) ~ '...' : product.description }}
                    </p>

                    {# Actions #}
                    <div class="d-grid mt-auto">
                        {% if session.user_id is defined and session.role == 'konzument' %}
                            <button class="btn btn-modern btn-modern-primary btn-sm" onclick="addToCart({{ product.product_id }})">
                                <i class="bi bi-cart-plus-fill"></i> Přidat do košíku
                            </button>
                        {% elseif session.user_id is not defined %}
                            <a href="?page=login" class="btn btn-modern btn-modern-secondary btn-sm">
                                <i class="bi bi-box-arrow-in-right"></i> Přihlaste se pro objednání
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    {% else %}
        {# No products message #}
        <div class="col-12">
            <div class="card card-modern text-center p-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #cbd5e1;"></i>
                <h4 class="mt-3" style="color: #64748b;">Zatím nejsou k dispozici žádné produkty</h4>
                <p style="color: #94a3b8;">Produkty se objeví, jakmile je dodavatelé přidají.</p>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block extra_js %}
<script>
// Add to cart function with AJAX
function addToCart(productId) {
    const formData = new FormData();
    formData.append('product_id', productId);
    formData.append('quantity', 1);

    fetch('?page=cart&action=add', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Show success message
            showNotification(data.message, 'success');

            // Update cart count in navbar if exists
            updateCartCount(data.cartCount);
        } else {
            showNotification(data.message, 'error');
        }
    })
    .catch(error => {
        console.error('Chyba:', error);
        showNotification('Chyba při přidávání do košíku', 'error');
    });
}

// Show notification
function showNotification(message, type) {
    const alertDiv = document.createElement('div');
    alertDiv.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed top-0 start-50 translate-middle-x mt-3`;
    alertDiv.style.zIndex = '9999';
    alertDiv.innerHTML = `<i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-circle'}-fill me-2"></i>${message}`;

    document.body.appendChild(alertDiv);

    setTimeout(() => {
        alertDiv.remove();
    }, 3000);
}

// Update cart count badge
function updateCartCount(count) {
    const cartBadge = document.getElementById('cartCount');
    if (cartBadge && count > 0) {
        cartBadge.textContent = count;
        cartBadge.classList.remove('d-none');
    }
}
</script>
{% endblock %}
