{# app/Views/templates/products.twig #}
{% extends "base.twig" %}

{% block title %}Nabídka produktů - Délicious{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12 py-4">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <h2 class="fw-bold mb-0" style="color: #0f172a;">
                <i class="bi bi-basket-fill" style="color: #f97316;"></i> Naše nabídka
            </h2>
            {% if session.role is defined and session.role == 'dodavatel' %}
                <a href="?page=supplier" class="btn btn-modern btn-modern-primary">
                    <i class="bi bi-shop-window"></i> Správa produktů
                </a>
            {% endif %}
        </div>
    </div>
</div>

{# Search and Filter Section #}
<div class="row mb-4">
    <div class="col-12">
        <div class="card-modern">
            <div class="card-body p-3">
                <div class="row g-3">
                    {# Search Input #}
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text" style="background: var(--bg-gray); border: 2px solid #e2e8f0; border-right: none;">
                                <i class="bi bi-search" style="color: var(--text-gray);"></i>
                            </span>
                            <input type="text" id="searchInput" class="form-control form-control-modern"
                                   placeholder="Vyhledat produkty..."
                                   style="border-left: none; padding-left: 0;">
                        </div>
                    </div>

                    {# Supplier Filter #}
                    <div class="col-md-4">
                        <select id="supplierFilter" class="form-control form-control-modern">
                            <option value="">Všichni dodavatelé</option>
                            {% for supplier in suppliers %}
                                <option value="{{ supplier.user_id }}">{{ supplier.jmeno }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    {# Reset Button #}
                    <div class="col-md-2">
                        <button id="resetFilters" class="btn btn-modern btn-modern-secondary w-100">
                            <i class="bi bi-arrow-counterclockwise"></i> Reset
                        </button>
                    </div>
                </div>

                {# Results Counter #}
                <div class="mt-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        <span id="resultsCount">Zobrazeno {{ products|length }} produktů</span>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3" id="productsGrid">
    {% if products|length > 0 %}
        {% for product in products %}
        <div class="col-sm-6 col-md-6 col-lg-4 mb-3">
            <div class="card-modern h-100">
                {# Product Image #}
                <div class="position-relative" style="height: 150px; overflow: hidden; background: #f1f5f9; border-radius: 12px 12px 0 0;">
                    {% if product.image %}
                        <img src="uploads/{{ product.image }}" alt="{{ product.name }}" class="w-100 h-100" style="object-fit: cover;">
                    {% else %}
                        <div class="w-100 h-100 d-flex align-items-center justify-content-center">
                            <i class="bi bi-image" style="font-size: 4rem; color: #cbd5e1;"></i>
                        </div>
                    {% endif %}
                    {# Price badge #}
                    <div class="position-absolute top-0 end-0 m-3">
                        <span class="badge" style="background: #f97316; font-size: 1rem; padding: 0.5rem 1rem;">
                            {{ product.price }} Kč
                        </span>
                    </div>
                </div>

                <div class="card-body d-flex flex-column p-3">
                    {# Product Name #}
                    <h6 class="fw-bold mb-2" style="color: #0f172a; font-size: 1rem;">{{ product.name }}</h6>

                    {# Supplier Name #}
                    <p class="text-muted mb-2" style="font-size: 0.85rem;">
                        <i class="bi bi-shop" style="color: #f97316;"></i> {{ product.supplier_name }}
                    </p>

                    {# Description #}
                    <p class="mb-3" style="color: #64748b; font-size: 0.9rem;">
                        {{ product.description|length > 80 ? product.description|slice(0, 80) ~ '...' : product.description }}
                    </p>

                    {# Actions #}
                    <div class="d-grid mt-auto">
                        {% if session.user_id is defined and (session.role == 'konzument' or session.role == 'admin') %}
                            <button class="btn btn-modern btn-modern-primary btn-sm" onclick="addToCart({{ product.product_id }})">
                                <i class="bi bi-cart-plus-fill"></i> Přidat do košíku
                            </button>
                        {% elseif session.user_id is not defined %}
                            <a href="?page=login" class="btn btn-modern btn-modern-secondary btn-sm">
                                <i class="bi bi-box-arrow-in-right"></i> Přihlaste se pro objednání
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    {% else %}
        {# No products message #}
        <div class="col-12">
            <div class="card card-modern text-center p-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #cbd5e1;"></i>
                <h4 class="mt-3" style="color: #64748b;">Zatím nejsou k dispozici žádné produkty</h4>
                <p style="color: #94a3b8;">Produkty se objeví, jakmile je dodavatelé přidají.</p>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block extra_js %}
<script>
// Add to cart function with AJAX
function addToCart(productId) {
    const formData = new FormData();
    formData.append('product_id', productId);
    formData.append('quantity', 1);

    fetch('?page=cart&action=add', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Show success message
            showNotification(data.message, 'success');

            // Update cart count in navbar if exists
            updateCartCount(data.cartCount);
        } else {
            // Check if error is due to different supplier
            if (data.different_supplier) {
                const clearAndAdd = confirm(
                    data.message + '\n\n' +
                    'Aktuálně máte v košíku produkty od: ' + data.current_supplier + '\n\n' +
                    'Chcete vyprázdnit košík a přidat tento produkt?'
                );

                if (clearAndAdd) {
                    // Clear cart and add product
                    clearCartAndAddProduct(productId);
                }
            } else {
                showNotification(data.message, 'error');
            }
        }
    })
    .catch(error => {
        console.error('Chyba:', error);
        showNotification('Chyba při přidávání do košíku', 'error');
    });
}

// Clear cart and add new product
function clearCartAndAddProduct(productId) {
    // First, clear the cart
    fetch('?page=cart&action=clear', {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Cart cleared, now add the new product
            const formData = new FormData();
            formData.append('product_id', productId);
            formData.append('quantity', 1);

            return fetch('?page=cart&action=add', {
                method: 'POST',
                body: formData
            });
        } else {
            throw new Error('Nepodařilo se vyprázdnit košík');
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showNotification('Košík vyprázdněn a produkt přidán', 'success');
            updateCartCount(data.cartCount);
        } else {
            showNotification(data.message, 'error');
        }
    })
    .catch(error => {
        console.error('Chyba:', error);
        showNotification('Chyba při přidávání produktu', 'error');
    });
}

// Show notification
function showNotification(message, type) {
    const alertDiv = document.createElement('div');
    alertDiv.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed top-0 start-50 translate-middle-x mt-3`;
    alertDiv.style.zIndex = '9999';
    alertDiv.innerHTML = `<i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-circle'}-fill me-2"></i>${message}`;

    document.body.appendChild(alertDiv);

    setTimeout(() => {
        alertDiv.remove();
    }, 3000);
}

// Update cart count badge
function updateCartCount(count) {
    const cartBadge = document.getElementById('cartCount');
    if (cartBadge && count > 0) {
        cartBadge.textContent = count;
        cartBadge.classList.remove('d-none');
    }
}

// AJAX Live Search and Filter functionality
let searchTimeout = null;

// Wait for DOM to be ready
document.addEventListener('DOMContentLoaded', function() {
    // Check if elements exist
    const searchInput = document.getElementById('searchInput');
    const supplierFilter = document.getElementById('supplierFilter');
    const resetFilters = document.getElementById('resetFilters');

    if (!searchInput || !supplierFilter || !resetFilters) {
        return;
    }

    // Search input with debounce (300ms delay)
    searchInput.addEventListener('input', function(e) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            performSearch();
        }, 300);
    });

    // Supplier filter - instant search
    supplierFilter.addEventListener('change', function(e) {
        performSearch();
    });

    // Reset filters button
    resetFilters.addEventListener('click', function(e) {
        searchInput.value = '';
        supplierFilter.value = '';
        performSearch();
    });
});

// Perform AJAX search
function performSearch() {
    const searchQuery = document.getElementById('searchInput').value;
    const supplierId = document.getElementById('supplierFilter').value;

    const formData = new FormData();
    formData.append('search', searchQuery);
    formData.append('supplier_id', supplierId);

    // Show loading state
    const productsGrid = document.getElementById('productsGrid');
    productsGrid.style.opacity = '0.5';
    productsGrid.style.pointerEvents = 'none';

    fetch('index.php?page=products&action=search', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Update products grid
            productsGrid.innerHTML = data.html;

            // Update results counter
            const resultsCount = document.getElementById('resultsCount');
            if (data.count === 0) {
                resultsCount.innerHTML = 'Nebyly nalezeny žádné produkty';
            } else if (data.count === 1) {
                resultsCount.innerHTML = 'Zobrazen 1 produkt';
            } else if (data.count < 5) {
                resultsCount.innerHTML = `Zobrazeny ${data.count} produkty`;
            } else {
                resultsCount.innerHTML = `Zobrazeno ${data.count} produktů`;
            }

            // Remove loading state
            productsGrid.style.opacity = '1';
            productsGrid.style.pointerEvents = 'auto';
        } else {
            showNotification('Chyba při vyhledávání', 'error');
            productsGrid.style.opacity = '1';
            productsGrid.style.pointerEvents = 'auto';
        }
    })
    .catch(error => {
        showNotification('Chyba při vyhledávání produktů', 'error');

        // Remove loading state
        productsGrid.style.opacity = '1';
        productsGrid.style.pointerEvents = 'auto';
    });
}
</script>
{% endblock %}
