// Add to cart function (will be implemented with CartController)
function addToCart(productId) {
    // TODO: Implement AJAX add to cart
    alert('Přidání do košíku bude implementováno v dalším kroku. Produkt ID: ' + productId);
}
</script>
{% endblock %}
