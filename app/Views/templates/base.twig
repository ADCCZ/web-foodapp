{# app/Views/templates/base.twig - Základní layout pro všechny stránky #}
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Délicious - Rozvoz jídla{% endblock %}</title>

    {# Bootstrap 5 CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    {# Vlastní moderní CSS #}
    <link href="css/style.css" rel="stylesheet">

    {# Vlastní CSS #}
    {% block extra_css %}{% endblock %}
</head>
<body>

    {# Navigační lišta - vždy viditelná #}
    <nav class="navbar navbar-expand-lg navbar-modern sticky-top">
        <div class="container">
            <a class="navbar-brand" href="?page=home">
                <i class="bi bi-cup-hot-fill" style="color: #f97316;"></i> <span style="color: #0f172a;">Délicious</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="?page=products">
                            <i class="bi bi-basket-fill"></i> Nabídka
                        </a>
                    </li>
                    {% if session.role is defined and session.role == 'admin' %}
                    <li class="nav-item">
                        <a class="nav-link" href="?page=admin">
                            <i class="bi bi-speedometer2"></i> Administrace
                        </a>
                    </li>
                    {% endif %}
                    {% if session.role is defined and session.role == 'dodavatel' %}
                    <li class="nav-item">
                        <a class="nav-link" href="?page=supplier">
                            <i class="bi bi-shop-window"></i> Moje produkty
                        </a>
                    </li>
                    {% endif %}
                    {% if session.role is defined and session.role == 'konzument' %}
                    <li class="nav-item">
                        <a class="nav-link position-relative" href="?page=cart">
                            <i class="bi bi-cart-fill"></i> Košík
                            <span id="cartCount" class="badge bg-danger position-absolute top-0 start-100 translate-middle {% if session.cart is not defined or session.cart|length == 0 %}d-none{% endif %}">
                                {% if session.cart is defined %}{{ session.cart|length }}{% endif %}
                            </span>
                        </a>
                    </li>
                    {% endif %}
                    {% if session.user_id is defined and (session.role == 'konzument' or session.role == 'dodavatel') %}
                    <li class="nav-item">
                        <a class="nav-link" href="?page=orders">
                            <i class="bi bi-bag-check-fill"></i> Objednávky
                        </a>
                    </li>
                    {% endif %}
                </ul>
                <ul class="navbar-nav ms-auto align-items-center">
                    {% if session.user_id is defined %}
                        {# Přihlášený uživatel #}
                        <li class="nav-item">
                            <span class="navbar-text me-3" style="color: #1e293b;">
                                <i class="bi bi-person-circle" style="color: #f97316;"></i> <strong>{{ session.jmeno }}</strong>
                                <span class="badge" style="background: #f97316;">{{ session.role }}</span>
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="?page=logout">
                                <i class="bi bi-box-arrow-right"></i> Odhlásit se
                            </a>
                        </li>
                    {% else %}
                        {# Nepřihlášený uživatel #}
                        <li class="nav-item">
                            <a class="nav-link" href="?page=login">
                                <i class="bi bi-box-arrow-in-right"></i> Přihlásit se
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-modern btn-modern-primary px-3 py-2 ms-2" href="?page=register">
                                <i class="bi bi-person-plus-fill"></i> Registrovat
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    {# Hlavní obsah stránky - každá šablona si ho naplní po svém #}
    <main class="container mt-4 mb-4">
        {% block content %}{% endblock %}
    </main>

    {# Footer #}
    <footer class="text-center py-2">
        <div class="container">
            <p class="mb-0" style="color: #64748b;">
                <i class="bi bi-heart-fill" style="color: #f97316;"></i> Délicious &copy; 2025
            </p>
        </div>
    </footer>

    {# Bootstrap JS #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {# Vlastní JavaScript #}
    {% block extra_js %}{% endblock %}
</body>
</html>
