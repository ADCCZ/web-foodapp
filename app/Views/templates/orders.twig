{# app/Views/templates/orders.twig #}
{% extends "base.twig" %}

{% block title %}Moje objednávky - Délicious{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <h2 class="fw-bold mb-4" style="color: #0f172a;">
            <i class="bi bi-bag-check-fill" style="color: #f97316;"></i>
            {% if session.role == 'konzument' %}Moje objednávky{% else %}Přijaté objednávky{% endif %}
        </h2>
    </div>
</div>

{% if orders|length > 0 %}
<div class="row">
    {% for order in orders %}
    <div class="col-12 mb-3">
        <div class="card card-modern">
            <div class="card-body">
                <div class="row align-items-center">
                    {# Order Info #}
                    <div class="col-md-3">
                        <h6 class="mb-1" style="color: #0f172a;">
                            <i class="bi bi-hash"></i> Objednávka {{ order.order_id }}
                        </h6>
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i> {{ order.created_at }}
                        </small>
                    </div>

                    {# Customer Info (for suppliers) #}
                    {% if session.role == 'dodavatel' %}
                    <div class="col-md-3">
                        <small class="text-muted d-block">Zákazník:</small>
                        <strong>{{ order.customer_name }}</strong><br>
                        <small class="text-muted">{{ order.customer_email }}</small>
                    </div>
                    {% endif %}

                    {# Status #}
                    <div class="{% if session.role == 'dodavatel' %}col-md-2{% else %}col-md-3{% endif %}">
                        {% if order.status == 'pending' %}
                            <span class="badge bg-warning">Čeká na zpracování</span>
                        {% elseif order.status == 'processing' %}
                            <span class="badge bg-info">Zpracovává se</span>
                        {% elseif order.status == 'completed' %}
                            <span class="badge bg-success">Dokončeno</span>
                        {% elseif order.status == 'cancelled' %}
                            <span class="badge bg-danger">Zrušeno</span>
                        {% endif %}
                    </div>

                    {# Price #}
                    <div class="{% if session.role == 'dodavatel' %}col-md-2{% else %}col-md-3{% endif %} text-end">
                        <small class="text-muted d-block">Celkem:</small>
                        <strong style="color: #f97316; font-size: 1.1rem;">{{ order.total_price }} Kč</strong>
                    </div>

                    {# Actions #}
                    <div class="{% if session.role == 'dodavatel' %}col-md-2{% else %}col-md-3{% endif %} text-end">
                        <a href="?page=orders&action=view&id={{ order.order_id }}" class="btn btn-modern btn-modern-primary btn-sm">
                            <i class="bi bi-eye-fill"></i> Detail
                        </a>
                    </div>
                </div>

                {# Order Items Preview #}
                <div class="mt-3 pt-3 border-top">
                    <small class="text-muted">Položky:</small>
                    <div class="d-flex flex-wrap gap-2 mt-2">
                        {% for item in order.items %}
                        <span class="badge bg-light text-dark">
                            {{ item.quantity }}x {{ item.name }}
                        </span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% else %}
{# No Orders #}
<div class="row">
    <div class="col-12">
        <div class="card card-modern text-center p-5">
            <i class="bi bi-inbox" style="font-size: 5rem; color: #cbd5e1;"></i>
            <h4 class="mt-4" style="color: #64748b;">
                {% if session.role == 'konzument' %}
                    Zatím nemáte žádné objednávky
                {% else %}
                    Zatím jste nedostali žádné objednávky
                {% endif %}
            </h4>
            {% if session.role == 'konzument' %}
            <p style="color: #94a3b8;">Začněte nakupovat z naší nabídky</p>
            <a href="?page=products" class="btn btn-modern btn-modern-primary mt-3">
                <i class="bi bi-basket-fill me-2"></i> Zobrazit produkty
            </a>
            {% endif %}
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
