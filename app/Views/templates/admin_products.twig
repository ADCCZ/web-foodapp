{# app/Views/templates/admin_products.twig #}
{% extends "base.twig" %}

{% block title %}Všechny produkty - Délicious{% endblock %}

{% block content %}
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <h2 class="fw-bold mb-0" style="color: #0f172a;">
                <i class="bi bi-box-seam" style="color: #f97316;"></i> Všechny produkty
            </h2>
            <a href="?page=admin" class="btn btn-modern btn-modern-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Zpět na dashboard
            </a>
        </div>
    </div>
</div>

{# Alert Box #}
<div class="row mb-3">
    <div class="col-12">
        <div class="alert d-none" id="alertBox" role="alert">
            <span id="alertMessage"></span>
        </div>
    </div>
</div>

{% if products|length > 0 %}
<div class="row g-4">
    {% for product in products %}
    <div class="col-md-6 col-lg-4" id="product-{{ product.product_id }}">
        <div class="card card-modern h-100">
            {# Product Image #}
            <div class="position-relative" style="height: 150px; overflow: hidden; background: #f1f5f9; border-radius: 12px 12px 0 0;">
                {% if product.image %}
                    <img src="uploads/{{ product.image }}" alt="{{ product.name }}" class="w-100 h-100" style="object-fit: cover;">
                {% else %}
                    <div class="w-100 h-100 d-flex align-items-center justify-content-center">
                        <i class="bi bi-image" style="font-size: 4rem; color: #cbd5e1;"></i>
                    </div>
                {% endif %}
                {# Price badge #}
                <div class="position-absolute top-0 end-0 m-3">
                    <span class="badge" style="background: #f97316; font-size: 1rem; padding: 0.5rem 1rem;">
                        {{ product.price }} Kč
                    </span>
                </div>
            </div>

            <div class="card-body d-flex flex-column">
                <h5 class="fw-bold mb-2" style="color: #0f172a;">{{ product.name }}</h5>
                <p class="mb-2" style="color: #64748b; flex-grow: 1;">{{ product.description }}</p>

                <small class="text-muted d-block mb-3">
                    <i class="bi bi-shop"></i> {{ product.supplier_name }}
                    <span class="badge bg-secondary ms-2">ID: {{ product.product_id }}</span>
                </small>

                {# Actions #}
                <div class="d-grid gap-2">
                    <button class="btn btn-modern btn-modern-primary btn-sm" onclick="editProduct({{ product.product_id }}, '{{ product.name|e('js') }}', '{{ product.description|e('js') }}', {{ product.price }})">
                        <i class="bi bi-pencil-fill"></i> Upravit
                    </button>
                    <button class="btn btn-modern btn-modern-secondary btn-sm" onclick="deleteProduct({{ product.product_id }})">
                        <i class="bi bi-trash-fill"></i> Smazat
                    </button>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% else %}
<div class="row">
    <div class="col-12">
        <div class="card card-modern text-center p-5">
            <i class="bi bi-inbox" style="font-size: 5rem; color: #cbd5e1;"></i>
            <h4 class="mt-4" style="color: #64748b;">Zatím nejsou žádné produkty</h4>
        </div>
    </div>
</div>
{% endif %}

{# Modal for editing product #}
<div class="modal fade" id="editProductModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 12px; border: none;">
            <div class="modal-header" style="background: #0f172a; color: white; border-radius: 12px 12px 0 0;">
                <h5 class="modal-title">
                    <i class="bi bi-pencil-fill"></i> Upravit produkt
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="editProductForm" enctype="multipart/form-data">
                    <input type="hidden" id="edit_product_id" name="product_id">

                    <div class="mb-3">
                        <label for="edit_name" class="form-label form-label-modern">
                            <i class="bi bi-tag-fill me-1"></i> Název produktu
                        </label>
                        <input type="text" class="form-control form-control-modern" id="edit_name" name="name" required>
                    </div>

                    <div class="mb-3">
                        <label for="edit_description" class="form-label form-label-modern">
                            <i class="bi bi-text-paragraph me-1"></i> Popis
                        </label>
                        <textarea class="form-control form-control-modern" id="edit_description" name="description" rows="3" maxlength="500" required></textarea>
                        <small style="color: #64748b;">Maximálně 500 znaků</small>
                    </div>

                    <div class="mb-3">
                        <label for="edit_price" class="form-label form-label-modern">
                            <i class="bi bi-currency-exchange me-1"></i> Cena (Kč)
                        </label>
                        <input type="number" class="form-control form-control-modern" id="edit_price" name="price" step="0.01" min="0" required>
                    </div>

                    <div class="mb-3">
                        <label for="edit_image" class="form-label form-label-modern">
                            <i class="bi bi-image-fill me-1"></i> Nový obrázek produktu (volitelné)
                        </label>
                        <input type="file" class="form-control form-control-modern" id="edit_image" name="image" accept="image/*">
                        <small style="color: #64748b;">Pokud nevyberete nový obrázek, zachová se stávající</small>
                    </div>

                    <button type="submit" class="btn btn-modern btn-modern-primary w-100">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <span id="editBtnText">Uložit změny</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
// Edit product function
function editProduct(productId, name, description, price) {
    document.getElementById('edit_product_id').value = productId;
    document.getElementById('edit_name').value = name;
    document.getElementById('edit_description').value = description;
    document.getElementById('edit_price').value = price;

    const editModal = new bootstrap.Modal(document.getElementById('editProductModal'));
    editModal.show();
}

// Edit product form submission
document.getElementById('editProductForm').addEventListener('submit', function(e) {
    e.preventDefault();

    const formData = new FormData(this);
    const btn = this.querySelector('button[type="submit"]');
    const btnText = document.getElementById('editBtnText');

    btn.disabled = true;
    btnText.innerHTML = 'Ukládám<span class="spinner-modern"></span>';

    fetch('?page=supplier&action=update', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        const alertBox = document.getElementById('alertBox');
        const alertMessage = document.getElementById('alertMessage');

        if (data.success) {
            alertBox.classList.remove('alert-danger');
            alertBox.classList.add('alert-success');
            alertMessage.textContent = data.message;
            alertBox.classList.remove('d-none');

            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('editProductModal'));
            modal.hide();

            // Reload page after 1 second
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        } else {
            alertBox.classList.remove('alert-success');
            alertBox.classList.add('alert-danger');
            alertMessage.textContent = data.message;
            alertBox.classList.remove('d-none');
        }

        btn.disabled = false;
        btnText.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i>Uložit změny';
    })
    .catch(error => {
        console.error('Chyba:', error);
        btn.disabled = false;
        btnText.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i>Uložit změny';
    });
});

// Delete product function
function deleteProduct(productId) {
    if (!confirm('Opravdu chcete smazat tento produkt?')) {
        return;
    }

    const formData = new FormData();
    formData.append('product_id', productId);

    fetch('?page=supplier&action=delete', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        const alertBox = document.getElementById('alertBox');
        const alertMessage = document.getElementById('alertMessage');

        if (data.success) {
            alertBox.classList.remove('alert-danger');
            alertBox.classList.add('alert-success');
            alertMessage.textContent = data.message;
            alertBox.classList.remove('d-none');

            // Remove product card from DOM
            document.getElementById('product-' + productId).remove();
        } else {
            alertBox.classList.remove('alert-success');
            alertBox.classList.add('alert-danger');
            alertMessage.textContent = data.message;
            alertBox.classList.remove('d-none');
        }
    })
    .catch(error => {
        console.error('Chyba:', error);
    });
}
</script>
{% endblock %}
