{# app/Views/templates/admin_orders.twig #}
{% extends "base.twig" %}

{% block title %}Všechny objednávky - Délicious{% endblock %}

{% block content %}
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <h2 class="fw-bold mb-0" style="color: #0f172a;">
                <i class="bi bi-bag-check-fill" style="color: #f97316;"></i> Všechny objednávky
            </h2>
            <a href="?page=admin" class="btn btn-modern btn-modern-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Zpět na dashboard
            </a>
        </div>
    </div>
</div>

{% if orders|length > 0 %}
<div class="row">
    {% for order in orders %}
    <div class="col-12 mb-3">
        <div class="card card-modern">
            <div class="card-body">
                <div class="row align-items-center">
                    {# Order Info #}
                    <div class="col-md-2">
                        <h6 class="mb-1" style="color: #0f172a;">
                            <i class="bi bi-hash"></i> {{ order.order_id }}
                        </h6>
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i> {{ order.created_at }}
                        </small>
                    </div>

                    {# Customer Info #}
                    <div class="col-md-3">
                        <small class="text-muted d-block">Zákazník:</small>
                        <strong>{{ order.customer_name }}</strong><br>
                        <small class="text-muted">{{ order.customer_email }}</small>
                    </div>

                    {# Items Count #}
                    <div class="col-md-2">
                        <small class="text-muted d-block">Položky:</small>
                        <strong>{{ order.items|length }}x</strong>
                    </div>

                    {# Status #}
                    <div class="col-md-2">
                        {% if order.status == 'pending' %}
                            <span class="badge bg-warning">Čeká na zpracování</span>
                        {% elseif order.status == 'processing' %}
                            <span class="badge bg-info">Zpracovává se</span>
                        {% elseif order.status == 'completed' %}
                            <span class="badge bg-success">Dokončeno</span>
                        {% elseif order.status == 'cancelled' %}
                            <span class="badge bg-danger">Zrušeno</span>
                        {% endif %}
                    </div>

                    {# Price #}
                    <div class="col-md-2 text-end">
                        <small class="text-muted d-block">Celkem:</small>
                        <strong style="color: #f97316; font-size: 1.1rem;">{{ order.total_price }} Kč</strong>
                    </div>

                    {# Actions #}
                    <div class="col-md-1 text-end">
                        <a href="?page=orders&action=view&id={{ order.order_id }}" class="btn btn-modern btn-modern-primary btn-sm">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                    </div>
                </div>

                {# Order Items Preview #}
                <div class="mt-3 pt-3 border-top">
                    <small class="text-muted">Položky:</small>
                    <div class="d-flex flex-wrap gap-2 mt-2">
                        {% for item in order.items %}
                        <span class="badge bg-light text-dark">
                            {{ item.quantity }}x {{ item.name }} - {{ item.supplier_name }}
                        </span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% else %}
<div class="row">
    <div class="col-12">
        <div class="card card-modern text-center p-5">
            <i class="bi bi-inbox" style="font-size: 5rem; color: #cbd5e1;"></i>
            <h4 class="mt-4" style="color: #64748b;">Zatím nejsou žádné objednávky</h4>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
